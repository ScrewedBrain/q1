    <script src="build/js/custom.min.js"></script>

    <script type="text/javascript">
    var modal = {};

      $(document).ready(function() {


$(".modal-submit").click(function(){
  console.log(modal);
  $("#modalOut").hide();
  if (modal.type == 'chasell'){
    $.ajax({
  method: "PUT",
  url: "orders/" + modal.id,
  data: { key: 'user', value: modal.value }
}).done(function(){
  $("#good").slideDown();

})

  } else {
    if (modal.type == 'chasta') {
          $.ajax({
  method: "PUT",
  url: "orders/" + modal.id,
  data: { key: 'status', value: modal.value }
}).done(function(){
  $("#good").slideDown();
})
    }
  }
})

        $('.close1').click(function(){
          $(this).parent().parent().hide();
        })

        var myReload = function(){
          $('select').change(function(){
            $('#modalOut').show();
            modal.type = $(this).attr('class');
            modal.id = $(this).parent().parent().attr('id');
            modal.value = $(this).val();
            console.log(modal)
          })
        }
        $('.manager').click(function(e){
          if (e.target.nodeName == "SELECT" || e.target.nodeName == "OPTION") {
            return
          }
          $(this).html($('#sellman').html());
          $(this).find('select').val($(this).attr('data'));
          myReload()
        });
        $('.status').click(function(e){
          if (e.target.nodeName == "SELECT" || e.target.nodeName == "OPTION") {
            return
          }
          $(this).html($('#sestatus').html());
          $(this).find('select').val($(this).attr('data'));
          myReload()
        });

      })
    </script>
  </body>

